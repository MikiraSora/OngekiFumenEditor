<mah:MetroWindow
    x:Class="OngekiFumenEditor.Kernel.ProgramUpdater.Dialogs.Views.ShowNewVersionDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cal="http://caliburnmicro.com"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OngekiFumenEditor.Kernel.ProgramUpdater.Dialogs.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:OngekiFumenEditor.Kernel.ProgramUpdater.Dialogs.ViewModels"
    Title="ShowNewVersionDialogView"
    d:DataContext="{d:DesignInstance Type=vm:ShowNewVersionDialogViewModel}"
    Background="{DynamicResource EnvironmentWindowBackground}"
    ResizeMode="NoResize"
    ShowMaxRestoreButton="False"
    ShowMinButton="False"
    SizeToContent="WidthAndHeight"
    Style="{DynamicResource MainWindowStyle}"
    mc:Ignorable="d">
    <StackPanel>
        <Grid Margin="10,15,10,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Label VerticalAlignment="Center" FontSize="15">Current Version</Label>
            <Label
                Grid.Row="0"
                Grid.Column="1"
                VerticalAlignment="Center"
                d:Content="1.2.3"
                Content="{Binding CurrentVersion}"
                FontSize="15"
                FontWeight="Bold">
            </Label>

            <Label
                Grid.Row="1"
                VerticalAlignment="Center"
                FontSize="15">
                New Version
            </Label>
            <Label
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Center"
                d:Content="1.5.8"
                Content="{Binding NewVersionInfo.Version}"
                FontSize="15"
                FontWeight="Bold">
            </Label>

            <Label
                Grid.Row="2"
                VerticalAlignment="Center"
                FontSize="15">
                Branch
            </Label>
            <Label
                Grid.Row="2"
                Grid.Column="1"
                VerticalAlignment="Center"
                d:Content="master"
                Content="{Binding NewVersionInfo.Branch}"
                FontSize="15"
                FontWeight="Bold">
            </Label>

            <Label
                Grid.Row="3"
                VerticalAlignment="Center"
                FontSize="15">
                File Size
            </Label>
            <Label
                Grid.Row="3"
                Grid.Column="1"
                VerticalAlignment="Center"
                d:Content="30.54 GB"
                Content="{Binding NewVersionInfo.FileSize, Converter={StaticResource DisplayFileSizeConverter}}"
                FontSize="15"
                FontWeight="Bold">
            </Label>

            <Label
                Grid.Row="4"
                VerticalAlignment="Center"
                FontSize="15">
                Release Time
            </Label>
            <Label
                Grid.Row="4"
                Grid.Column="1"
                VerticalAlignment="Center"
                d:Content="2012/10/14 30:26:59.123"
                Content="{Binding NewVersionInfo.Time}"
                FontSize="15"
                FontWeight="Bold">
            </Label>
        </Grid>
        <CheckBox
            Margin="10,0"
            HorizontalAlignment="Right"
            Content="我已保存好项目和数据, 准备好了"
            IsChecked="{Binding IsReady}" />
        <Button
            Margin="5,10,5,5"
            Padding="10"
            cal:Message.Attach="StartUpdate()"
            Content="开始更新"
            IsEnabled="{Binding IsReady}" />
    </StackPanel>
</mah:MetroWindow>
